<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        tools:context=".module.mine.activity.LoginActivity">

    <include layout="@layout/title_bar" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号登陆"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#0B0B0B" />

    <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginHorizontal="20dp"
            android:background="#f3f5f8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textSize="20dp"
                android:textColor="#050505" />

        <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:hint="请输入手机号"
                android:layout_marginLeft="20dp"
                android:textColorHint="#757a90"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="#f5f4f9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="20dp"
                android:textColor="#050505" />

        <EditText
                android:id="@+id/et_password"
                android:inputType="textPassword"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:hint="请填写密码"
                android:layout_marginLeft="20dp"
                android:textColorHint="#757a90"
                android:layout_marginRight="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_height="wrap_content" />


    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:text="忘记密码"
                android:textColor="#27bea3"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/tv_register"
                android:textColor="#27bea3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册账号"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignTop="@id/tv_forget_password"
                android:layout_toLeftOf="@id/tv_forget_password" />
    </RelativeLayout>

    <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="50dp"
            android:layout_marginHorizontal="60dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_login"
            android:textColor="#ffffff" />


    <TextView

            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆代表您已阅读并同意用户协议及隐私政策"
            android:textColor="#6a6f85" />
</LinearLayout>